# Configuración para cPanel con Passenger
# Redirige todas las peticiones de API al passenger_wsgi.py

RewriteEngine On

# Redirigir todas las peticiones API al backend
RewriteRule ^api/(.*)$ /passenger_wsgi.py/$1 [QSA,L]

# Para servir archivos estáticos del frontend
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.html [QSA,L]
